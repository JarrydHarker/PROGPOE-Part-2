@model IUser

@{
    ViewData["Title"] = "Login";
}

<div class="content">
    <h1>Login</h1>

    <h4>User</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    Email: <br /><input type="email" asp-for=email value="someone@example.com" class="form-text" /><br />
                    Password: <br /><input type="password" asp-for=password class="form-text" /><br />
                    <br /><input type="submit" value="Login" class="feaux-button" />
                    <button type="button" onclick="toHome()" >Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
