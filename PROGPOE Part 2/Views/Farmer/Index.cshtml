@{

}

<div class="content">
    <h1>Farmer Dashboard</h1>
    <div>
        <h2>Welcome, @Model.userName</h2>
    </div>

    <div>
        <h2>Manage Products</h2>
        <table>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Production Date</th>
            </tr>
            @foreach (Product product in Model.lstProducts)
            {
                <tr>
                    <td>@product.productID</td>
                    <td>@product.productName</td>
                    <td>@product.description</td>
                    <td>@product.price</td>
                    <td>@product.category</td>
                    <td>@product.productionDate</td>
                    <td><form asp-action="Edit" asp-controller="Products">
                            <input type="hidden" name="id" value="@product.productID" />
                            <input type="submit" value="Edit" class="feaux-button" />
                        </form>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-controller="Products">
                            <input type="hidden" name="id" value="@product.productID" />
                            <input type="submit" value="Delete" class="button-danger" />
                        </form>
                    </td>
                </tr>
            }
        </table>
        <a asp-action="Create" asp-controller="Products" class="feaux-button">Add new</a>
    </div>
</div>
