@model Farmer
@{
}

<div class="content">
    <h2>Create Farmer</h2>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    Username: <br /><input type="text" asp-for=userName value="Name" class="form-text" /><br />
                    Email: <br /><input type="email" asp-for=email value="someone@example.com" class="form-text" /><br />
                    Password: <br /><input type="password" asp-for=password class="form-text" /><br />
                    <br /><input type="submit" value="Create" class="feaux-button" />
                </div>
            </form>
        </div>
    </div>
</div>

